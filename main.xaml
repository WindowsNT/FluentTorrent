<NavigationView IsBackEnabled="False" PaneDisplayMode="Top" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    <NavigationView.MenuItems>
        <NavigationViewItem Icon="Download" Content="Torrents" />
      <NavigationViewItem Icon="ReportHacked" Content="AV Results" />
    </NavigationView.MenuItems>
    <StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >      <ContentDialog x:Name="DeleteTorrentDlg" IsPrimaryButtonEnabled="false"  >        <StackPanel>          <TextBlock FontWeight="Bold" Text="Delete this torrent?" Margin="10"/>          <TextBlock Text="" x:Name="TorrToDelete" Margin="10" />          <StackPanel Orientation="Horizontal" Margin="10">            <Button Content="Torrent Only" x:Name="TorrDelButton1" Margin="10,0,0,0"/>            <Button Content="Torrent and data" x:Name="TorrDelButton2" Margin="10,0,0,0"/>            <Button Content="Cancel" x:Name="TorrDelButton3" Margin="10,0,0,0"/>          </StackPanel>        </StackPanel>      </ContentDialog>      <ContentDialog x:Name="Dlg1" IsPrimaryButtonEnabled="false"  >        <StackPanel>          <TextBlock FontWeight="Bold" Text="Enter an URL:" />          <TextBox Width="300" x:Name="murl" Margin="0,10,0,10" />          <Border Background="LightBlue" BorderBrush="LightBlue" BorderThickness="2" Margin="0,10,0,10" />          <StackPanel Orientation="Horizontal" Margin="0,10,0,10" >            <Button Content="Add" x:Name="btn2" Margin="0,0,10,0"/>            <Button Content="Cancel" x:Name="btn3"/>          </StackPanel>        </StackPanel>      </ContentDialog>      <StackPanel Visibility="Collapsed" x:Name="Options">        <TextBlock FontSize="24" Text="Options" Margin="20,0,0,0" />        <Pivot Margin="20,0,0,150">          <PivotItem Header="Basic"  >            <StackPanel>              <Button Content="Change" Name="TB_SaveDirB" />            </StackPanel>          </PivotItem>          <PivotItem Header="Network" >            <StackPanel>              <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" FlowDirection="LeftToRight">                <TextBlock Margin="5" Width="250">TCP Port (empty = automatic) :</TextBlock>                <StackPanel FlowDirection="LeftToRight">                  <TextBox x:Name="T_TCPPort" />                </StackPanel>              </StackPanel>              <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" FlowDirection="LeftToRight">                <TextBlock Margin="5" Width="250">Download Limit (KB/S) (0 = unlimited) :</TextBlock>                <StackPanel FlowDirection="LeftToRight">                  <TextBox x:Name="T_DownloadLimit" />                </StackPanel>              </StackPanel>              <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" FlowDirection="LeftToRight">                <TextBlock Margin="5" Width="250">Upload Limit (KB/S) (0 = unlimited) :</TextBlock>                <StackPanel FlowDirection="LeftToRight">                  <TextBox x:Name="T_UploadLimit" />                </StackPanel>              </StackPanel>              <Button Content="Apply" x:Name="ApplySettingsButton" />              <TextBlock Margin="5">Changes to these settings require a restart.</TextBlock>            </StackPanel>          </PivotItem>          <PivotItem Header="Miscellaneous" >            <StackPanel>              <CheckBox Name="CB_MagnetLink" Content="Enable Magnet Link" />              <CheckBox Name="CB_TorrentFile" Content="Associate with torrent files" />              <CheckBox Name="CB_AV" Content="Scan finished torrents for threats" />            </StackPanel>          </PivotItem>          <PivotItem Header="Advanced" >            <StackPanel>            </StackPanel>          </PivotItem>        </Pivot>      </StackPanel>      <StackPanel Visibility="Collapsed" x:Name="AVResults">        <TextBlock FontSize="24" Text="Scan Results" Margin="20,0,0,0" />        <TextBlock Text="" Margin="20" x:Name="ScanText" />        <ListView x:Name="scanlist" >        </ListView>      </StackPanel>      <StackPanel x:Name="MainView">        <CommandBar Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">          <CommandBar.Content>            <TextBlock FontSize="24" Text="Torrents" Margin="20,0,0,0"/>          </CommandBar.Content>          <AppBarButton Icon="Add" Label="Add URL" x:Name="btn1"/>          <AppBarButton Icon="OpenFile" Label="Add File" x:Name="btnf"/>          <AppBarButton Icon="Sort" Label="Sort" IsCompact="True" >            <AppBarButton.Flyout>              <MenuFlyout>                <MenuFlyoutItem Text="Name" x:Name="sort_name" />                <MenuFlyoutItem Text="Priority" x:Name="sort_priority" />               </MenuFlyout>            </AppBarButton.Flyout>          </AppBarButton>        </CommandBar>        <StackPanel x:Name="MainView2" Orientation="Vertical" >          <ListView x:Name="torrlist" SelectionMode="Extended" />           <StackPanel x:Name="pivotstack">              <Pivot x:Name="pitt" Visibility="Collapsed">                <PivotItem Header="Info" x:Name="PivotInfo">                </PivotItem>                <PivotItem Header="Files" x:Name="PivotFiles">                  <ListView x:Name="FilesView" ScrollViewer.VerticalScrollBarVisibility="Visible" />                </PivotItem>                <PivotItem Header="Peers" x:Name="PivotPeers">                  <ListView x:Name="PeersView" />                </PivotItem>              </Pivot>            </StackPanel>          </StackPanel>      </StackPanel>    </StackPanel></NavigationView>